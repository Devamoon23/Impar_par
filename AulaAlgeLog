#include <stdlib.h>
#include <stdio.h>

int main(void)
{

int n1, n2, n3, contI=0, contP=0;

    printf("\nInsira o primeiro numero de 0 a 9: ");
    scanf("%d",&n1);

    printf("\nInsira o segundo numero: ");
    scanf("%d",&n2);

    printf("\nInsira o terceiro numero ");
    scanf("%d",&n3);

if ((n1 % 2) == 0)
{
  contP++;
}  else {
  contI++;
}
if ((n2 % 2) == 0)
  {
  contP++;
}  else {
  contI++;
}
  if ((n3 % 2) == 0)
  {
  contP++;
}  else {
  contI++;
}

  printf("\nQuantidade de numeros pares: %d",contP);
  printf("\nQuantidade de numeros impares: %d",contI);
  
return (0);
}
